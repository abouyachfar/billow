{% extends 'base.html.twig' %}

{% block title %}Hello CMSController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<script src="https://js.stripe.com/v2/"></script>

<div class="example-wrapper cms">
    <div class="cms-top">
        <h1>{{ "Our prices"|trans }}</h1>
        <p>
            {{ "With Billow, you don’t pay a commission. Our packages are tailored for the amount of time, visibility and support you’ll need to sell."|trans }}
        </p>
    </div>

    <div class="cms-body">
        <h3 class="subtitle">{{ "Payment"|trans }}</h3>

        <div class="row">
            {% if charge.paid %}
                <p class="alert alert-success">{{ 'Congratulations!'|trans }}<br/>{{ 'Your payment is done successefully.'|trans }}</p>
            {% else %}
                <p class="alert alert-danger">{{ 'An error has been occured!'|trans }}<br/><br/>{{ charge.failure_message }}</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}