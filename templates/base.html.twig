            <!-- Main Script -->
            <script src="/js/functions.js"></script>
            <script src="/js/main.js"></script>

            <script>
                var $range_price = $("#demo_1").ionRangeSlider({
                    type: "double",
                    min: 0,
                    max: 1000000,
                    from: 0,
                    to: 1000000,
                    skin: "round",
                    prefix: "$",
                    step: 5000
                });

                $range_price.on("change", function () {
                    var $inp = $(this);
                    var from = Intl.NumberFormat().format($inp.data("from")); // reading input data-from attribute
                    var to = Intl.NumberFormat().format($inp.data("to"));

                    if ($("#range-price-lbl").find(".cretaria-text").length) {
                        $("#range-price-lbl").find(".cretaria-text").text("$" + from + " - $" + to + "$");
                        $("#range-price-lbl").removeClass("hidden");
                        $(".cretaria-choice").removeClass("hidden");
                    } else {
                        var _html = '<div id="range-price-lbl"><div class="cretaria-text">' + from + '$ - ' + to + '$</div><div class="cretaria-remove">X</div></div>';
                        $("#cretaria-choices").prepend(_html);
                        $(".cretaria-choice").removeClass("hidden");
                    }
                });
            </script>
